<UserControl x:Class="match4padel_staff.View.CreateMatchView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:match4padel_staff.View"
             mc:Ignorable="d" 
             d:DesignHeight="560.04" d:DesignWidth="1240">
    <Grid Background="{StaticResource main_menu_background}">
        <Grid Margin="20">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>
            <Grid Grid.Row="0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"></ColumnDefinition>
                    <ColumnDefinition Width="*"></ColumnDefinition>
                    <ColumnDefinition Width="*"></ColumnDefinition>
                </Grid.ColumnDefinitions>
                <TextBlock Text="Crear partido"
                         Style="{StaticResource view_headers_style}"
                         Grid.Column="0"></TextBlock>
                <StackPanel Grid.Column="2"
                          HorizontalAlignment="Right"
                          VerticalAlignment="Center"
                          Orientation="Horizontal">
                </StackPanel>
            </Grid>
            <Grid Grid.Row="1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="20"></ColumnDefinition>
                    <ColumnDefinition Width="250"></ColumnDefinition>
                    <ColumnDefinition Width="30"></ColumnDefinition>
                    <ColumnDefinition></ColumnDefinition>
                    <ColumnDefinition></ColumnDefinition>
                    <ColumnDefinition Width="20"></ColumnDefinition>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="20"></RowDefinition>
                    <RowDefinition Height="74"></RowDefinition>
                    <RowDefinition Height="40"></RowDefinition>
                    <RowDefinition Height="74"></RowDefinition>
                    <RowDefinition Height="40"></RowDefinition>
                    <RowDefinition Height="74"></RowDefinition>
                    <RowDefinition></RowDefinition>
                </Grid.RowDefinitions>
                <StackPanel Grid.Column="2"
                            Grid.RowSpan="7"
                            Width="2"
                            Background="{StaticResource BluePrimaryColor}"></StackPanel>



                <Border BorderBrush="{StaticResource BluePrimaryColor}"
                        BorderThickness="2"
                        Width="230"
                        Margin="0 0 14 0"
                        Grid.Column="1"
                        Grid.Row="1"
                        HorizontalAlignment="Right"
                        Padding="4"
                        Background="White">
                    <StackPanel>
                        <TextBlock Text="Selecciona una fecha"
                                   HorizontalAlignment="Right"
                               VerticalAlignment="Top"
                               FontSize="20"
                                   Foreground="{StaticResource BlueDarkColor}"></TextBlock>
                        <Separator></Separator>
                        <DatePicker x:Name="reservations_calendar"
                                      Width="210"
                                      DisplayDateStart="{Binding MinDate}"
                                      Background="White"
                                      FontFamily="Roboto"
                                      Foreground="{StaticResource BlueDarkColor}"
                                      FontSize="16"
                                      SelectedDate="{Binding SelectedDate, Mode=TwoWay}"
                                      HorizontalAlignment="Right"
                                      BorderThickness="0"
                                      BorderBrush="{StaticResource BluePrimaryColor}"
                                      Margin="0 4 0 0">
                            <DatePicker.Resources>
                                <Style TargetType="DatePickerTextBox">
                                    <Setter Property="Foreground" Value="{StaticResource BlueDarkColor}"/>
                                    <Setter Property="Text" Value=" " />
                                    <Setter Property="IsHitTestVisible" Value="False"/>
                                    <Setter Property="IsReadOnly" Value="True"/>
                                </Style>
                            </DatePicker.Resources>
                        </DatePicker>
                    </StackPanel>
                </Border>


                <Border BorderBrush="{StaticResource BluePrimaryColor}"
                        BorderThickness="2"
                        Width="230"
                        Grid.Column="1"
                        Grid.Row="3"
                        HorizontalAlignment="Right"
                        Padding="4"
                        Margin="0 0 14 0">
                    <StackPanel>
                        <TextBlock Text="Selecciona una hora"
                                   HorizontalAlignment="Right"
                               VerticalAlignment="Top"
                               FontSize="20"
                                   Foreground="{StaticResource BlueDarkColor}"></TextBlock>
                        <Separator></Separator>
                        <ComboBox Width="140"
                              Height="22"
                              VerticalAlignment="Top"
                              HorizontalAlignment="Right"
                              Margin="0 4 0 0"
                              Foreground="{StaticResource BlueDarkColor}"
                              FontSize="14"
                              FontFamily="Roboto"
                              MaxDropDownHeight="140"
                              ItemsSource="{Binding freeHours}"
                              SelectedItem="{Binding SelectedHour, Mode=TwoWay}">
                            <ComboBox.Style>
                                <Style TargetType="ComboBox">
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding freeHours.Count}" Value="0">
                                            <Setter Property="IsEditable" Value="True"/>
                                            <Setter Property="IsEnabled" Value="False"/>
                                            <Setter Property="Text" Value="Sin disponibilidad"/>
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </ComboBox.Style>
                        </ComboBox>
                    </StackPanel>
                </Border>

                <Border BorderBrush="{StaticResource BluePrimaryColor}"
                     BorderThickness="2"
                     Width="230"
                     Grid.Column="1"
                     Grid.Row="5"
                     HorizontalAlignment="Right"
                     Padding="4"
                     Margin="0 0 14 0">
                    <StackPanel>
                        <TextBlock Text="Selecciona el nivel"
                    HorizontalAlignment="Right"
                VerticalAlignment="Top"
                FontSize="20"
                    Foreground="{StaticResource BlueDarkColor}"></TextBlock>
                        <Separator></Separator>
                        <ComboBox Width="140"
                                   Height="22"
                                   VerticalAlignment="Top"
                                   HorizontalAlignment="Right"
                                   Margin="0 4 0 0"
                                   Foreground="{StaticResource BlueDarkColor}"
                                   FontSize="14"
                                   FontFamily="Roboto"
                                   MaxDropDownHeight="140"
                                   ItemsSource="{Binding Levels}"
                                   SelectedItem="{Binding SelectedLevel, Mode=TwoWay}">          
                        </ComboBox>
                    </StackPanel>
                </Border>
                <Grid Grid.Column="3"
                      Grid.ColumnSpan="2"
                      Grid.Row="0"
                      Grid.RowSpan="7">
                    <ScrollViewer HorizontalScrollBarVisibility="Disabled" VerticalScrollBarVisibility="Auto">
                        <ItemsControl ItemsSource="{Binding Courts}" ItemTemplate="{StaticResource CreateMatches_template}">
                            <ItemsControl.ItemsPanel>
                                <ItemsPanelTemplate>
                                    <UniformGrid Columns="2"/>
                                </ItemsPanelTemplate>
                            </ItemsControl.ItemsPanel>
                        </ItemsControl>
                    </ScrollViewer>

                </Grid>

            </Grid>
        </Grid>
    </Grid>

</UserControl>