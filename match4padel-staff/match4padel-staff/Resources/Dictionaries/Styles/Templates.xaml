                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <Image Source="{Binding PictureFullPath}" 
                    Grid.Row="0"
                    Grid.Column="0"
                    Margin="4"
                    VerticalAlignment="Center"/>

                <StackPanel Grid.Row="0"
