<UserControl x:Class="match4padel_staff.View.HomeView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:match4padel_staff.View"
             xmlns:model="clr-namespace:match4padel_staff.Model"
             mc:Ignorable="d" 
             d:DesignHeight="576" d:DesignWidth="1280">
    <UserControl.Resources>
        <DropShadowEffect x:Key="DropShadowEffect" Color="Black" Direction="320" ShadowDepth="5" Opacity="0.3" BlurRadius="10" />
        <DataTemplate x:Key="CourtCardTemplate" DataType="{x:Type model:Court}">
            <Border 
            CornerRadius="10" 
            Background="White" 
            BorderBrush="Gray" 
            BorderThickness="1" 
            Padding="10" 
            Margin="5"
                Effect="{StaticResource DropShadowEffect}">
                <StackPanel>
                   
                </StackPanel>
            </Border>
        </DataTemplate>

    </UserControl.Resources>
    <Grid Background="{StaticResource main_menu_background}">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="40"></ColumnDefinition>
            <ColumnDefinition Width="*"></ColumnDefinition>
            <ColumnDefinition Width="260"></ColumnDefinition>
            <ColumnDefinition Width="14"></ColumnDefinition>
            <ColumnDefinition Width="260"></ColumnDefinition>
            <ColumnDefinition Width="14"></ColumnDefinition>
            <ColumnDefinition Width="260"></ColumnDefinition>
            <ColumnDefinition Width="14"></ColumnDefinition>
            <ColumnDefinition Width="260"></ColumnDefinition>
            <ColumnDefinition Width="*"></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="40"></RowDefinition>
            <RowDefinition Height="40"></RowDefinition>
            <RowDefinition Height="20"></RowDefinition>
            <RowDefinition Height="195"></RowDefinition>
            <RowDefinition Height="14"></RowDefinition>
            <RowDefinition Height="195"></RowDefinition>
            <RowDefinition Height="*"></RowDefinition>
        </Grid.RowDefinitions>
        <ContentControl Grid.Column="2"
                        Grid.Row="3"
            Content="{Binding court1}" ContentTemplate="{StaticResource CourtCardTemplate}" />

        <ContentControl Grid.Column="4"
                Grid.Row="3"
    Content="{Binding court2}" ContentTemplate="{StaticResource CourtCardTemplate}" />

        <ContentControl Grid.Column="6"
                Grid.Row="3"
    Content="{Binding court3}" ContentTemplate="{StaticResource CourtCardTemplate}" />

        <ContentControl Grid.Column="8"
                Grid.Row="3"
    Content="{Binding court4}" ContentTemplate="{StaticResource CourtCardTemplate}" />

        <ContentControl Grid.Column="2"
                Grid.Row="5"
    Content="{Binding court5}" ContentTemplate="{StaticResource CourtCardTemplate}" />

        <ContentControl Grid.Column="4"
                Grid.Row="5"
    Content="{Binding court6}" ContentTemplate="{StaticResource CourtCardTemplate}" />

        <ContentControl Grid.Column="6"
                Grid.Row="5"
    Content="{Binding court7}" ContentTemplate="{StaticResource CourtCardTemplate}" />

        <ContentControl Grid.Column="8"
                Grid.Row="5"
    Content="{Binding court8}" ContentTemplate="{StaticResource CourtCardTemplate}" />

    </Grid>
</UserControl>
