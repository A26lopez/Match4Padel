<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    
    <!-- Corporative colors -->
    <SolidColorBrush x:Key="BluePrimaryColor">#515CAC</SolidColorBrush>
    <SolidColorBrush x:Key="BlueSecondaryColor">#B8BCD7</SolidColorBrush>
    <SolidColorBrush x:Key="BlueDarkColor">#304775</SolidColorBrush>

    <!-- Decoration colors -->
    <SolidColorBrush x:Key="YellowDetails">#E3EA6A</SolidColorBrush>
    <SolidColorBrush x:Key="GrayDarkDecoration">#8F8E8E</SolidColorBrush>
    <SolidColorBrush x:Key="GrayLightDecoration">#B8B9BB</SolidColorBrush>

    <!-- Text colors -->
    <SolidColorBrush x:Key="DarkText">#535353</SolidColorBrush>
    <SolidColorBrush x:Key="PlainTextPrimary">#8F8E8E</SolidColorBrush>
    <SolidColorBrush x:Key="PlainTextSecondary">#B8B9BB</SolidColorBrush>
    <SolidColorBrush x:Key="LightText">#C7C7C7</SolidColorBrush>

    <!-- Status colors -->
    <SolidColorBrush x:Key="Confirmed_status">#ccffd2</SolidColorBrush>
    <SolidColorBrush x:Key="Completed_status">#e0e0e0</SolidColorBrush>
    <SolidColorBrush x:Key="Cancelled_status">#ffdbdb</SolidColorBrush>
</ResourceDictionary>