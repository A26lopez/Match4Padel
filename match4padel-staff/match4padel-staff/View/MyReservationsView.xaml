<UserControl x:Class="match4padel_staff.View.MyReservationsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:match4padel_staff.View"
             mc:Ignorable="d" 
             d:DesignHeight="560.04" d:DesignWidth="1240">
    <Grid Background="{StaticResource main_menu_background}">
        <Grid Margin="20">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>
            <Grid Grid.Row="0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"></ColumnDefinition>
                    <ColumnDefinition Width="*"></ColumnDefinition>
                    <ColumnDefinition Width="*"></ColumnDefinition>
                </Grid.ColumnDefinitions>
                <TextBlock Text="Mis reservas"
                           Style="{StaticResource view_headers_style}"
                           Grid.Column="0"></TextBlock>
                <StackPanel Grid.Column="2"
                            HorizontalAlignment="Right"
                            VerticalAlignment="Center"
                            Orientation="Horizontal">
                    <TextBlock Text="Filtrar por:"
                               FontSize="22"
                               Margin="0 0 10 0"
                               FontFamily="Roboto"
                               Foreground="{StaticResource BlueDarkColor}"></TextBlock>
                    <ComboBox 
                          FontSize="18"
                          Width="200"
                          FontFamily="Roboto"
                          Foreground="{StaticResource BlueDarkColor}">
                        <ComboBoxItem>
                            Confirmadas
                        </ComboBoxItem>
                        <ComboBoxItem>
                            Completadas
                        </ComboBoxItem>
                        <ComboBoxItem>
                            Canceladas
                        </ComboBoxItem>
                    </ComboBox>
                </StackPanel>



            </Grid>
            <DataGrid Grid.Row="1"
                      ItemsSource="{Binding Reservations}"
                      AutoGenerateColumns="False"
                      Background="Transparent"
                      BorderBrush="{StaticResource BluePrimaryColor}"
                      BorderThickness="1"
                      FontSize="18"
                      CanUserAddRows="False"
                      CanUserDeleteRows="False"
                      CanUserResizeRows="False"
                      CanUserReorderColumns="True"
                      CanUserSortColumns="True"
                      IsReadOnly="True"
                      SelectionMode="Single"
                      SelectionUnit="FullRow"
                      HeadersVisibility="Column"
                      GridLinesVisibility="Horizontal">
                    <DataGrid.Resources>

                        <Style TargetType="DataGridColumnHeader">
                            <Setter Property="Background" Value="{StaticResource BluePrimaryColor}" />
                            <Setter Property="Foreground" Value="White" />
                            <Setter Property="FontWeight" Value="Bold" />
                            <Setter Property="FontFamily" Value="Roboto" />
                            <Setter Property="Padding" Value="10" />
                            <Setter Property="BorderBrush" Value="{StaticResource GrayLightDecoration}"/>
                            <Setter Property="BorderThickness" Value="0,0,1,0"/>
                        </Style>

                        <Style TargetType="DataGridRow">
                            <Setter Property="FontFamily" Value="Roboto"/>
                            <Setter Property="Foreground" Value="{StaticResource DarkText}" />
                            <Setter Property="Padding" Value="10"/>
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="{StaticResource LightText}"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>

                    </DataGrid.Resources>

                    <DataGrid.Columns>
                        <DataGridTextColumn Header="Fecha" Binding="{Binding Date, StringFormat=dd/MM/yyyy}" Width="*" />
                        <DataGridTextColumn Header="Pista" Binding="{Binding Court.Name}" Width="*" />
                        <DataGridTextColumn Header="Hora inicio" Binding="{Binding StartTime, StringFormat=hh\\:mm}" Width="*" />
                        <DataGridTextColumn Header="Hora fin" Binding="{Binding EndTime, StringFormat=hh\\:mm}" Width="*" />
                        <DataGridTextColumn Header="Duración" Binding="{Binding FormattedDuration}" Width="*" />
                        <DataGridTextColumn Header="Estado" Binding="{Binding Status}" Width="*" />
                        <DataGridTextColumn Header="Fecha creación" Binding="{Binding CreatedAt, StringFormat=dd/MM/yyyy}" Width="*" />
                    </DataGrid.Columns>
                </DataGrid>
        </Grid>
        


    </Grid>
</UserControl>
