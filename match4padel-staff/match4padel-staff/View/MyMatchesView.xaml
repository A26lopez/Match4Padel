<UserControl x:Class="match4padel_staff.View.MyMatchesView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:match4padel_staff.View"
             mc:Ignorable="d" 
             d:DesignHeight="560.04" d:DesignWidth="1240">
    <Grid Background="{StaticResource main_menu_background}">
        <Grid Margin="20">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>
            <Grid Grid.Row="0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"></ColumnDefinition>
                    <ColumnDefinition Width="*"></ColumnDefinition>
                    <ColumnDefinition Width="*"></ColumnDefinition>
                </Grid.ColumnDefinitions>
                <TextBlock Text="Mis partidos"
                         Style="{StaticResource view_headers_style}"
                         Grid.Column="0"></TextBlock>
                <StackPanel Grid.Column="2"
                          HorizontalAlignment="Right"
                          VerticalAlignment="Center"
                          Orientation="Horizontal">
                    <TextBlock Text="Filtrar por:"
                             FontSize="22"
                             Margin="0 0 10 0"
                             FontFamily="Roboto"
                             Foreground="{StaticResource BlueDarkColor}"></TextBlock>
                    <ComboBox 
                        FontSize="18"
                        Width="200"
                        FontFamily="Roboto"
                        Foreground="{StaticResource BlueDarkColor}">
                        <ComboBoxItem>
                            Confirmadas
                        </ComboBoxItem>
                        <ComboBoxItem>
                            Completadas
                        </ComboBoxItem>
                        <ComboBoxItem>
                            Canceladas
                        </ComboBoxItem>
                    </ComboBox>
                </StackPanel>



            </Grid>
            <DataGrid Grid.Row="1"
                    ItemsSource="{Binding Matches}"
                    Style="{StaticResource dataGrid_style}"
                    ColumnHeaderStyle="{StaticResource dataGrid_headers}"
                    RowStyle="{StaticResource dataGrid_rows}">
                <DataGrid.Columns>
                    <!--FECHA-->
                    <DataGridTextColumn Header="Fecha"
                                      Binding="{Binding Reservation.Date, StringFormat=dd/MM/yyyy}"
                                      Width="125" />

                    <!--HORA INICIO / FIN -->
                    <DataGridTemplateColumn Width="120" >
                        <DataGridTemplateColumn.HeaderTemplate>
                            <DataTemplate>
                                <StackPanel Orientation="Vertical">
                                    <TextBlock Text="Hora inicio"/>
                                    <TextBlock Text="Hora fin"/>
                                </StackPanel>
                            </DataTemplate>
                        </DataGridTemplateColumn.HeaderTemplate>
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <StackPanel Orientation="Vertical">
                                    <TextBlock Text="{Binding Reservation.StartTime, StringFormat=hh\\:mm}"/>
                                    <TextBlock Text="{Binding Reservation.EndTime, StringFormat=hh\\:mm}"/>
                                </StackPanel>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>

                    <!--DURACION-->
                    <DataGridTemplateColumn Width="110" >
                        <DataGridTemplateColumn.HeaderTemplate>
                            <DataTemplate>
                                <StackPanel Orientation="Vertical">
                                    <TextBlock Text="Duración"/>
                                    <TextBlock Text="(Minutos)"/>
                                </StackPanel>
                            </DataTemplate>
                        </DataGridTemplateColumn.HeaderTemplate>
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <StackPanel Orientation="Vertical">
                                    <TextBlock Text="{Binding Reservation.Duration}"/>
                                </StackPanel>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>
                    
                    <!--PISTA-->
                    <DataGridTemplateColumn Width="90">
                        <DataGridTemplateColumn.HeaderTemplate>
                            <DataTemplate>
                                <StackPanel Orientation="Vertical">
                                    <TextBlock Text="Pista"/>
                                    <TextBlock Text="Zona"/>
                                </StackPanel>
                            </DataTemplate>
                        </DataGridTemplateColumn.HeaderTemplate>
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <StackPanel Orientation="Vertical">
                                    <TextBlock Text="{Binding Reservation.Court.Name}"/>
                                    <TextBlock Text="{Binding Reservation.Court.Zone}"/>
                                </StackPanel>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>

                    <!-- ESTADO -->
                    <DataGridTemplateColumn Width="120" >
                        <DataGridTemplateColumn.HeaderTemplate>
                            <DataTemplate>
                                <StackPanel Orientation="Vertical">
                                    <TextBlock Text="Estado"/>
                                    <TextBlock Text="Partido"/>
                                </StackPanel>
                            </DataTemplate>
                        </DataGridTemplateColumn.HeaderTemplate>
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <StackPanel Orientation="Vertical">
                                    <TextBlock Text="{Binding Reservation.Status}"/>
                                    <TextBlock Text="{Binding Status}"/>
                                </StackPanel>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>

                    <!--NIVEL-->
                    <DataGridTextColumn Header="Nivel"
                                      Binding="{Binding Level}"
                                      Width="120" />

                    <!--JUGADORES-->
                    <DataGridTemplateColumn Width="*" >
                        <DataGridTemplateColumn.HeaderTemplate>
                            <DataTemplate>
                                <StackPanel Orientation="Vertical">
                                    <TextBlock Text="Creador"/>
                                    <TextBlock Text="Jugadores"/>
                                </StackPanel>
                            </DataTemplate>
                        </DataGridTemplateColumn.HeaderTemplate>
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <Grid Margin="4 0 4 0">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto"></ColumnDefinition>
                                        <ColumnDefinition Width="*"></ColumnDefinition>
                                        <ColumnDefinition Width="Auto"></ColumnDefinition>
                                    </Grid.ColumnDefinitions>
                                    <Grid.RowDefinitions>
                                        <RowDefinition></RowDefinition>
                                        <RowDefinition></RowDefinition>
                                    </Grid.RowDefinitions>
                                    <TextBlock Text="{Binding Owner.AccountInfo.Username}"
                                               Grid.Column="0"
                                               Grid.Row="0"/>
                                    <TextBlock Text="{Binding Player1.AccountInfo.Username}"
                                               Grid.Column="0"
                                               Grid.Row="1"/>
                                    <TextBlock Text="{Binding Player2.AccountInfo.Username}"
                                               HorizontalAlignment="Right"
                                               Grid.Column="1"
                                               Grid.Row="0"/>
                                    <TextBlock Text="{Binding Player3.AccountInfo.Username}"
                                                   HorizontalAlignment="Right"
                                               Grid.Column="1"
                                               Grid.Row="1"/>
                                </Grid>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>
                    
                    <!--FECHA CREACION-->
                    <DataGridTemplateColumn Width="125" >
                        <DataGridTemplateColumn.HeaderTemplate>
                            <DataTemplate>
                                <StackPanel Orientation="Vertical">
                                    <TextBlock Text="Fecha"/>
                                    <TextBlock Text="Creación"/>
                                </StackPanel>
                            </DataTemplate>
                        </DataGridTemplateColumn.HeaderTemplate>
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <StackPanel Orientation="Vertical">
                                    <TextBlock Text="{Binding Reservation.CreatedAt, StringFormat=dd/MM/yyyy}"/>
                                </StackPanel>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>

                    <!--CANCELAR-->
                    <DataGridTemplateColumn Header="Opciones"
                                          Width="120">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <Button Width="100"
                                        Height="30">
                                    <Button.Style>
                                        <Style TargetType="Button" BasedOn="{StaticResource grid_button_style}">
                                            <Setter Property="IsEnabled" Value="True"/>
                                            <Style.Triggers>
                                                <!-- Es owner y está cancelado -->
                                                <MultiDataTrigger>
                                                    <MultiDataTrigger.Conditions>
                                                        <Condition Binding="{Binding IsUserOwner}" Value="True"/>
                                                        <Condition Binding="{Binding Reservation.Status}" Value="CANCELLED"/>
                                                    </MultiDataTrigger.Conditions>
                                                    <Setter Property="IsEnabled" Value="False"/>
                                                    <Setter Property="Content" Value="Cancelado"/>
                                                </MultiDataTrigger>
                                                <!-- No está en el partido -->
                                                <MultiDataTrigger>
                                                    <MultiDataTrigger.Conditions>
                                                        <Condition Binding="{Binding IsUserJoined}" Value="False"/>
                                                    </MultiDataTrigger.Conditions>
                                                    <Setter Property="IsEnabled" Value="False"/>
                                                    <Setter Property="Content" Value="Abandonado"/>
                                                </MultiDataTrigger>
                                                <!-- Es owner y no está cancelado -->
                                                <DataTrigger Binding="{Binding IsUserOwner}" Value="True">
                                                    <Setter Property="IsEnabled" Value="True"/>
                                                    <Setter Property="Command" Value="{Binding DataContext.CancelMatchCommand, RelativeSource={RelativeSource AncestorType=DataGrid}}"/>
                                                    <Setter Property="CommandParameter" Value="{Binding}"/>
                                                    <Setter Property="Content" Value="Cancelar"/>
                                                </DataTrigger>
                                                <!-- Es player y no esta abandonado -->
                                                <DataTrigger Binding="{Binding IsUserPlayer}" Value="True">
                                                    <Setter Property="IsEnabled" Value="True"/>
                                                    <Setter Property="Command" Value="{Binding DataContext.LeaveMatchCommand, RelativeSource={RelativeSource AncestorType=DataGrid}}"/>
                                                    <Setter Property="CommandParameter" Value="{Binding}"/>
                                                    <Setter Property="Content" Value="Abandonar"/>
                                                </DataTrigger>



                                            </Style.Triggers>
                                        </Style>
                                    </Button.Style>
                                </Button>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>

                </DataGrid.Columns>
            </DataGrid>
        </Grid>

    </Grid>
</UserControl>
