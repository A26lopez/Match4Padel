<Window x:Class="match4padel_staff.Views.LoginView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:match4padel_staff.Views"
        xmlns:ViewModel="clr-namespace:match4padel_staff.ViewModel"
        mc:Ignorable="d"
        Title="{StaticResource AppName}"
        Height="576"
        Width="1080"
        WindowStartupLocation="CenterScreen"
        ResizeMode="CanMinimize">
    
    <Window.DataContext>
        <ViewModel:LoginViewModel/>
    </Window.DataContext>

    <Window.Resources>
        <BooleanToVisibilityConverter x:Key="BoolToVisibility"/>
    </Window.Resources>

    <Window.Visibility>
        <Binding Path="IsViewVisible" Mode="TwoWay" Converter="{StaticResource BoolToVisibility}"/>
    </Window.Visibility>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition Width="2px"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid x:Name="login_form_grid" Grid.Column="0"
                   Background="{StaticResource login_screen_background}">
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="100"/>
                <RowDefinition Height="20"/>
                <RowDefinition Height="20"/>
                <RowDefinition Height="6"/>
                <RowDefinition Height="40"/>
                <RowDefinition Height="20"/>
                <RowDefinition Height="20"/>
                <RowDefinition Height="6"/>
                <RowDefinition Height="40"/>
                <RowDefinition Height="20"/>
                <RowDefinition Height="30"/>
                <RowDefinition Height="10"/>
                <RowDefinition Height="20"/>
                <RowDefinition Height="100"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="120"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="120"/>
            </Grid.ColumnDefinitions>
            
            <ContentControl x:Name="logo"
                            Grid.Row="1"
                            Grid.Column="1"
                            Content="{StaticResource logo}"
                            VerticalAlignment="Bottom"/>
            
            <TextBlock Grid.Row="3"
                       Grid.Column="1"
                       Text="USUARIO"
                       Style="{StaticResource login_text_style}"/>
            
            <TextBox x:Name="username_textBox" 
                    Grid.Row="5"
                    Grid.Column="1"
                    Style="{StaticResource login_screen_textBox}"
                    Tag="Escribe tu nombre de usuario..."/>
            
            <TextBlock Grid.Row="7"
                       Grid.Column="1"
                       Text="CONTRASEÑA"
                       Style="{StaticResource login_text_style}"/>

            <TextBox x:Name="password_textBox"
                     Grid.Row="9"
                     Grid.Column="1"
                     Style="{StaticResource login_screen_textBox}"
                     Tag="Escribe tu contraseña..."/>

            <Button x:Name="login_button"
                    Grid.Row="11"
                    Grid.Column="1"
                    Style="{StaticResource login_button_style}"
                    Content="Iniciar sesión"/>
            
            <TextBlock x:Name="rememberPassword"
                       Grid.Row="13"
                       Grid.Column="1"
                       Text="¿Has olvidado tu contraseña?"
                       Style="{StaticResource login_text_style}"
                       FontSize="12"
                       TextAlignment="Center"/>

        </Grid>
        <Grid Grid.Column="1"
             Background="{StaticResource DecorationColor}">
        </Grid>
        <Grid Grid.Column="2"
              Background="{StaticResource SecondaryColor}">
            <Image Source="../Resources/Images/login_screen_image.png"
                   Opacity="0.75"
                   Stretch="UniformToFill"/>
        </Grid>
    </Grid>
</Window>
