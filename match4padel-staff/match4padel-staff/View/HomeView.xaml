<UserControl x:Class="match4padel_staff.View.HomeView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:match4padel_staff.View"
             xmlns:model="clr-namespace:match4padel_staff.Model"
             mc:Ignorable="d"
             d:DesignHeight="560.04" d:DesignWidth="1240">
    <Grid Background="{StaticResource main_menu_background}">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"></ColumnDefinition>
            <ColumnDefinition Width="280"></ColumnDefinition>
            <ColumnDefinition Width="20"></ColumnDefinition>
            <ColumnDefinition Width="280"></ColumnDefinition>
            <ColumnDefinition Width="20"></ColumnDefinition>
            <ColumnDefinition Width="280"></ColumnDefinition>
            <ColumnDefinition Width="20"></ColumnDefinition>
            <ColumnDefinition Width="280"></ColumnDefinition>
            <ColumnDefinition Width="*"></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"></RowDefinition>
            <RowDefinition Height="240"></RowDefinition>
            <RowDefinition Height="20"></RowDefinition>
            <RowDefinition Height="240"></RowDefinition>
            <RowDefinition Height="*"></RowDefinition>
        </Grid.RowDefinitions>
        <ContentControl Grid.Column="1"
                        Grid.Row="1"
                        Content="{Binding court1}"
                        ContentTemplate="{StaticResource CourtCardTemplate}" />

        <ContentControl Grid.Column="3"
                        Grid.Row="1"
                        Content="{Binding court2}"
                        ContentTemplate="{StaticResource CourtCardTemplate}" />

        <ContentControl Grid.Column="5"
                        Grid.Row="1"
                        Content="{Binding court3}"
                        ContentTemplate="{StaticResource CourtCardTemplate}" />

        <ContentControl Grid.Column="7"
                        Grid.Row="1"
                        Content="{Binding court4}"
                        ContentTemplate="{StaticResource CourtCardTemplate}" />

        <ContentControl Grid.Column="1"
                        Grid.Row="3"
                        Content="{Binding court5}"
                        ContentTemplate="{StaticResource CourtCardTemplate}" />

        <ContentControl Grid.Column="3"
                        Grid.Row="3"
                        Content="{Binding court6}"
                        ContentTemplate="{StaticResource CourtCardTemplate}" />

        <ContentControl Grid.Column="5"
                        Grid.Row="3"
                        Content="{Binding court7}"
                        ContentTemplate="{StaticResource CourtCardTemplate}" />

        <ContentControl Grid.Column="7"
                        Grid.Row="3"
                        Content="{Binding court8}"
                        ContentTemplate="{StaticResource CourtCardTemplate}" />

    </Grid>
</UserControl>
