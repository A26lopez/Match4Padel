<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <!--Headers-->
    <Style x:Key="headers_text_style" TargetType="TextBlock">
        <Setter Property="FontFamily" Value="Roboto"/>
        <Setter Property="Foreground" Value="{DynamicResource PlainTextPrimary}"/>
        <Setter Property="FontSize" Value="16"/>
    </Style>

    <!--Normal text-->
    <Style x:Key="normal_text_style" TargetType="TextBlock">
        <Setter Property="FontFamily" Value="Roboto"/>
        <Setter Property="Foreground" Value="{DynamicResource PlainTextPrimary}"/>
        <Setter Property="FontSize" Value="10"/>
    </Style>
    
    <!--Link texts-->
    <Style x:Key="special_text_style" TargetType="TextBlock">
        <Setter Property="FontFamily" Value="Roboto"/>
        <Setter Property="Foreground" Value="{DynamicResource BluePrimaryColor}"/>
        <Setter Property="FontSize" Value="14"/>
    </Style>
</ResourceDictionary>