                    <Separator/>
                    <TextBlock Text="{Binding Description}" FontSize="10"
                            Foreground="{DynamicResource DarkText}"
                            TextWrapping="Wrap"/>
                    <Separator/>

                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="Zona:"
                                Style="{StaticResource LabelTextStyle}"
                                    FontSize="14"/>
                        <TextBlock Text="{Binding Zone}"
